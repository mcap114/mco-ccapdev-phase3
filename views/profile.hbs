<!-- container for the header -->
<div class="parent-header">
    {{#if isLoggedIn}}
        {{> headerUser}}
    {{else}}
        {{> headerNonUser}}
    {{/if}}
</div>

<!-- container for the content -->
<div class="parent-content-profile">
    <!-- profile information -->
    {{> profileInfo}}
    {{#if isLoggedIn}}
    <div id="follow-btn-container">
    {{#if isFollowing}}
        <button id="unfollow-btn" onclick="unfollowUser('{{user-data.username}}')">Unfollow</button>
    {{else}}
        <button id="follow-btn" onclick="followUser('{{user-data.username}}')">Follow</button>
    {{/if}}
    </div>
    {{/if}}
    {{> profileInfoDiv}}

    <!-- following and followers -->
    {{> widgetProfile}}

    <!-- user's favorite place and reviews -->
    {{> profileInsights}}
</div>

<!-- container for the footer -->
<div class="parent-footer">
    {{> footer}}
</div>